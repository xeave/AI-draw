<view class="page-container">
  <block wx:if="{{gallery.length > 0}}">
    <view class="grid-container">
      <view class="card" wx:for="{{gallery}}" wx:key="id">
        <t-image 
          src="{{item.image}}" 
          mode="aspectFill" 
          width="100%" 
          height="340rpx" 
          class="card-img" 
          bind:tap="onPreviewImage"
          data-src="{{item.image}}"
        />
        <view class="card-info">
          <view class="user-info">
            <t-avatar size="small" shape="circle" icon="user" image="{{item.avatar}}" />
            <text class="user-name">{{item.user}}</text>
          </view>
          <text class="desc">{{item.desc}}</text>
        </view>
      </view>
    </view>
  </block>
  
  <view wx:else class="empty-state">
    <view class="empty-icon-wrapper">
      <t-icon name="image" size="80rpx" color="#ccc" />
    </view>
    <text class="empty-text">暂无作品，快去创作吧</text>
  </view>
</view>

<t-fab icon="add" bind:click="onFabClick" aria-label="生成图片" style="right: 32rpx; bottom: 240rpx;" />

<tab-bar value="home"></tab-bar>
