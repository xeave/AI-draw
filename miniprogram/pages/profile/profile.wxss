.page-container {
  padding-bottom: 200rpx;
  background: transparent;
}

.header-section {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 64rpx 48rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20px);
  margin: 32rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.05);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.login-btn {
  margin-left: 32rpx;
  margin-top: 0;
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  padding: 20rpx 60rpx;
  border-radius: 60rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.login-btn::after {
  border: none;
}

.gallery-section {
  padding: 0 32rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  color: #333;
  padding-left: 12rpx;
  border-left: 8rpx solid #0052d9;
}

/* Grid Card Styles copied from home.wxss */
.grid-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.card {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04);
  display: flex;
  flex-direction: column;
  transition: transform 0.3s ease;
  border: 1px solid rgba(255, 255, 255, 0.5);
}

.card:active {
  transform: scale(0.98);
}

.card-info {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.desc {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-weight: 500;
}

.date {
  font-size: 24rpx;
  color: #999;
}

/* New Avatar/Nickname Styles */
.avatar-wrapper {
  padding: 0;
  width: 140rpx !important;
  height: 140rpx !important;
  border-radius: 50%;
  margin: 0 32rpx 0 0;
  background-color: transparent;
  flex-shrink: 0;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
  border: 4rpx solid #fff;
}

.avatar-wrapper::after {
  border: none;
}

.user-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  flex: 1;
}

.nickname-input {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  height: auto;
  min-height: auto;
}

.edit-profile {
  display: flex;
  align-items: center;
  background: rgba(0, 82, 217, 0.08);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

.edit-text {
  font-size: 24rpx;
  color: #0052d9;
  margin-left: 8rpx;
  font-weight: 500;
}

.empty-state {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 64rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 48rpx;
}

.empty-icon-wrapper {
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 48rpx;
}

.create-btn {
  background: linear-gradient(135deg, #0052d9 0%, #003cab 100%) !important;
  border: none !important;
  border-radius: 48rpx !important;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 217, 0.3);
  padding: 0 64rpx !important;
}
