.page-container {
  padding-bottom: 200rpx;
}
.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 64rpx 0;
  background: #fff;
  margin-bottom: 24rpx;
}
.nickname {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 16rpx;
  color: #333;
}
.login-btn {
  margin-top: 24rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 12rpx 48rpx;
  border-radius: 40rpx;
  border: none;
}
.login-btn::after {
  border: none;
}
.gallery-section {
  padding: 24rpx;
}
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

/* Grid Card Styles copied from home.wxss */
.grid-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
}

.card-info {
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.desc {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.date {
  font-size: 24rpx;
  color: #999;
}
