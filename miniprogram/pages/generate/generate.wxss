.page-container {
  padding: 32rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.input-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
  margin-bottom: 24rpx;
}

.tips-section {
  background-color: #eef7fe;
  padding: 24rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #333;
  margin-left: 12rpx;
  line-height: 1.5;
}

.tags-section {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.tag-item {
  font-size: 26rpx;
  color: #0052d9;
  background: rgba(0, 82, 217, 0.1);
  padding: 8rpx 24rpx;
  border-radius: 8rpx;
}

.action-section {
  margin-bottom: 48rpx;
}


.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.optional-text {
  font-size: 26rpx;
  color: #999;
  margin-left: 12rpx;
  font-weight: normal;
}

.negative-section {
  margin-bottom: 48rpx;
}
